test leak-2.5 {leaks in arrays} -body {
#lang L
    leak() {
	int tmp, end, i, t, j[2][2][2];

	end = getbytes();
	for(i=0; i<5;i++) {
	    for (t=0; t < 2; t++) {
	        j[0][i%2][t]=i+t;
	        j[1][i%2][t]=i*i+t;
	    }
            tmp=end;
	    end = getbytes();
	}
	puts(list(end-tmp, j));
    }
    leak();
} -constraints memory -output "0 {{{4 5} {3 4}} {{16 17} {9 10}}}\n"

